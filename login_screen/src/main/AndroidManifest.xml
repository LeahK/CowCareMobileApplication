<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.leah.myapplication"
    android:installLocation="internalOnly">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Katy's Cow Care"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="Katy's Cow Care"
            android:noHistory="true">
            HttpClient client = new DefaultHttpClient();
            HttpPost post = new HttpPost("@string/mock_server");
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Your Cows"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AddNewCow"
            android:label="Add New Cow" />
        <activity android:name=".CowInformation"
            android:label="Cow Information" />
        <activity android:name=".NextStep"
            android:label="Follow Up" />
        <activity android:name=".TEMP" />
        <activity android:name=".SignUp"
            android:label="Sign Up" ></activity>
    </application>

</manifest>
